<h1>ALL TEH RECORDS!</h1>

<% if @albums.empty? %>
  <h2><a href="www.discogs.com">Find some records!</a></h2>
  <h4>(This would be a great place to pull in Discogs' data dumps and populate the database, though it's better to just figure out the API)</h4>
<% else %>
  <table layout="fixed" width=100% >
    <tr align="left">
      <th><h2> Title<h2></th>
      <th><h4> Artist<h4></th>
      <th><h4> Release date<h4></th>
      <th><h4> In collection?</h4></th>
      <th><h4> Find on Discogs </h4></th>
    </tr>
    <% @albums.each do |a| %>
    <tr align="left">
      <td><%= link_to a.title, album_path(a)%></td>
      <td><%= link_to a.artist_name, artist_path(a) || button_to("Add", edit_album_path(a)) %></td>
      <td><% a.rel_date || button_to("Add", edit_album_path(a)) %></td>
      <td><% if user_signed_in? && current_user.albums.include?(a) %>
            <h5>Got it!</h5>
          <% else %>
            <%= button_to "Add", add_album_path(a) %>
            <% end %></td>
      <td><button>
          <% if a.alb_url %>
            <a href="http://www.discogs.com/<%=a.alb_url%>">See album's Discogs page.</a>
          <% else %>
            <a href="http://www.discogs.com/search/?q=<%=a.title%>+<%=a.rel_id%>">Search on Discogs.com</a>
          <% end %>
          </button></td>
    </tr>
    <% end %>
  </table>
<% end %>

<br></br>


